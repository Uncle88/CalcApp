<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CalculApp.MyPage">
	<ContentPage.Content>

	<Grid BackgroundColor="White">


	<Grid.RowDefinitions>  
	 				  <RowDefinition Height="Auto" />
	 				  <RowDefinition Height="Auto" />
					  <RowDefinition Height="Auto" />
   					  <RowDefinition Height="Auto" />
    				  <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
                <!-- Row 0 -->   
    	<Entry Grid.Row="0" Grid.Column="0" Placeholder="Subtotal" HorizontalTextAlignment="End" VerticalTextAlignment="Center"  />
 				<!-- Row 1 --> 
 	    <Button Text="Calculate Tip" Grid.Row="1" Grid.Column="0" BackgroundColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
 				<!-- Row 2 --> 
 				<Label Text="Tip Percentage:" Grid.Row="2" Grid.Column="0" Font="Large" HorizontalTextAlignment="End" VerticalTextAlignment="Center" />
		<ContentView BackgroundColor="#40808080" Grid.Row="4" Grid.Column="1" Padding="10, 10, 40, 10">
			<Label Text="{Binding TipPercentage,&#xA;StringFormat='{0:C}'}" Font="Large" HorizontalTextAlignment="End" />
		</ContentView>
 				<!-- Row 3 --> 
 				<Label Text="Tip Amount:" Grid.Row="3" Grid.Column="0" Font="Large" HorizontalTextAlignment="End" VerticalTextAlignment="Center" />
		<ContentView BackgroundColor="#40808080" Grid.Row="4" Grid.Column="1" Padding="10, 10, 40, 10">
			<Label Text="{Binding TipAmount,&#xA; StringFormat='{0:C}'}" Font="Large" HorizontalTextAlignment="End" />
		</ContentView>
 				<!-- Row 4 --> 
 				<Label Text="Total Amount:" Grid.Row="4" Grid.Column="0" Font="Large" HorizontalTextAlignment="End" VerticalTextAlignment="Center" />
		<ContentView BackgroundColor="#40808080" Grid.Row="4" Grid.Column="1" Padding="10, 10, 40, 10">
			<Label Text="{Binding TotalAmount,&#xA;StringFormat='{0:C}'}" Font="Large" HorizontalTextAlignment="End" />
		</ContentView>
 			

    
	</Grid>


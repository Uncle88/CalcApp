	<Label Text="________________________________" TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
	<Label Text="Calculate Tip" FontSize="30" TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" BackgroundColor="Gray"/>

	<Label Text="Tip Persentage" FontSize="20" TextColor="Black" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" />
	<Label Text="Tip Amount" FontSize="20" TextColor="Black" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand"/>
	<Label Text="Total Amount" FontSize="20" TextColor="Lime" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand"/>
	-->

	</ContentPage.Content>
</ContentPage>
